<!DOCTYPE html>
<html>
<head>
  <title>FruitsOfTheWorld</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <h1 class="header-title"><a href="/" class="header-title-text">Fruits Of The World</a></h1>

    <section class="top-bar-section">
      <%- if current_user -%>
        <p><%= link_to 'Sign Out', destroy_user_session_path, class: "signup-link", method: :delete %></p>
      <%- else -%>
        <p><%= link_to 'Sign Up', new_user_registration_path, class: "signup-link" %> | <%= link_to 'Sign In', new_user_session_path, class: "signup-link" %></p>
      <%- end -%>
    </section>
  </nav>



  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>

  <%- if Rails.env.development? || Rails.env.test? -%>
    <%= javascript_tag do %>
      window.railsEnv = '<%= Rails.env %>'
    <%- end -%>
  <%- end -%>
  <%= javascript_pack_tag 'application' %>

  <%= yield :extra_footer %>
</body>
</html>
