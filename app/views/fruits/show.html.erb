<div>
  <h1><%= @fruit.name %></h1>
  <h3><%= @fruit.sci_name %></h3>
  <p><%= @fruit.description %></p>

  <%= form_for [@fruit, @review] do |f| %>
    Rating: <%= f.number_field :rating %><br/>
    Body: <%= f.text_field :body %>
    <%= f.submit %>
  <% end %>

  <ul>
    <% @reviews.each do |review| %>
        <%= review.rating %> <br>
        <%= review.body %>
        <%= review.created_at.strftime("%B %d %Y") %>
      <% end %>
  </ul>
</div>

<h3>Reviews</h3>
  <div class="reviews-table">
    <ul>
      <% @reviews.each do |review| %>
        <strong>Review:</strong>
        <%= review.body %> <br />
        <strong>Rating:</strong>
        <%= review.rating %> <br />
        <strong>Reviewed On:</strong>
        <%= review.created_at.strftime("%B %d %Y") %> <br />
      <br />
      <% end %>
    </ul>
  </div>
