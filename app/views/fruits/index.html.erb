<div>
  <h1>Fruits index</h1>

  <ul>
  <% @fruits.each do |fruit| %>
    <li>
      <%= link_to "#{fruit.name} - #{fruit.sci_name}", fruit_path(fruit) %>
    </li>
  <% end %>
  </ul>
</div>

<div class="search-form">
  <%= form_tag(search_fruits_path, method: :get) do %>
    <%= text_field_tag 'query', params[:query], placeholder: 'Search for fruit' %>
    <%= submit_tag 'Search', class: 'alert button expand' %>
  <% end %>
</div>
